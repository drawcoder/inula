{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2015",
    "target": "ES5",
    "allowJs": true,
    "strict": true,
    "lib": ["dom", "esnext", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "paths": {
      "openinula": ["../packages/inula"],
    }
  },
  "include": [
    "./src/**/*",
    "./examples/**/*"
  ]
}
